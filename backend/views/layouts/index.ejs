<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Healthy Transitions Staff</title>
  </head>
<body>
  
  <%- include ('../partials/navbar'); %>

  <div class='container centered-page' id="settings">
    <% if(error && error.length > 0) { %>
      <div class="top-message ui message form red" id="layout-message">
        <p><%= error %></p>
      </div>
    <% } %>
    <% if(props.message && props.message.length > 0) { %>
      <div 
        class="top-message ui message form yellow" id="layout-message">
        <p><%= props.message %></p>
      </div>
    <% } %>
  </div>
  <div style="margin-left: 2em; margin-right: 2em">
    <% if(props.activeTab) { %>
      <%- include ('../partials/listingsNavbar'); %>
    <% } %>
    <%- body %> 
  </div>

</body>
</html>